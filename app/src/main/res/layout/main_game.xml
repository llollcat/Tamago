<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="11"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/White"
            android:orientation="horizontal"
            tools:ignore="NestedWeights"
            android:baselineAligned="false">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/GIHunger"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/hamburger_24px" />

                    <ProgressBar
                        android:id="@+id/hunger_progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:background="@android:color/white" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/GIThirst"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_local_drink_black_24dp" />

                    <ProgressBar
                        android:id="@+id/thirst_progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:background="@android:color/white"
                        android:visibility="visible" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"

                    >


                    <ImageView
                        android:id="@+id/GIBredom"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_hotel_black_" />

                    <ProgressBar
                        android:id="@+id/boredom_progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:background="@android:color/white"
                        android:visibility="visible" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:id="@+id/GIHealth"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_baseline_local_hospital" />

                    <ProgressBar
                        android:id="@+id/health_progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:background="@android:color/white"
                        android:visibility="visible" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/money_textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:text="@string/Load"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark"
                    android:textSize="34sp"
                    android:textStyle="bold"

                    />


                <ImageButton
                    android:id="@+id/work_ImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:background="@drawable/ic_monetization_on_black_24dp"

                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/pause_imageButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_pause_black"

                    />


                <ImageButton
                    android:id="@+id/sho_food_imageButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"

                    android:background="@drawable/ic_baseline_fastfood" />


                <ImageButton
                    android:id="@+id/shop_general_imageButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_favorite_black_24dp" />


            </LinearLayout>


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:background="@android:color/black" />


    </LinearLayout>


    <TextView
        android:id="@+id/tamago_condition_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:text="@string/Load"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="100sp"


        />

    <TextView
        android:id="@+id/score_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:text="@string/Time"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/time_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:text="@string/Load"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="40sp" />


</LinearLayout>